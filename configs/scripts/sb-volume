#!/bin/sh

# Prints the current volume or ğŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -w -f "$TERMINAL" -e pulsemixer; pkill -RTMIN+10 "${STATUSBAR:-dwmblocks}" ;;
	2) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
	4) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+ ;;
	5) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%- ;;
	3) notify-send "ğŸ“¢ Volume module" "\- Shows volume ğŸ”Š, ğŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print ğŸ”‡ and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo ğŸ”‡ && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
    $((vol == 0)) ) icon="î" ;;     # Material Design Volume Mute
    $((vol <= 20)) ) icon="î" ;;    # Material Design Volume Low (no lines)
    $((vol <= 40)) ) icon="î" ;;    # Material Design Volume Medium (1 line)
    $((vol <= 70)) ) icon="î" ;;    # Material Design Volume High (2 lines)
    $((vol > 70)) ) icon="î‘" ;;     # Material Design Volume Very High (3 lines)
esac


# case 1 in
# 	$((vol >= 70)) ) icon="ğŸ”Š" ;;
# 	$((vol >= 30)) ) icon="ğŸ”‰" ;;
# 	$((vol >= 1)) ) icon="ğŸ”ˆ" ;;
# 	* ) echo ğŸ”‡ && exit ;;
# esac

#echo "$icon"
echo "$icon$vol%"
